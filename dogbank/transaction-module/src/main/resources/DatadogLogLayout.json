{
  "timestamp": {
    "$resolver": "timestamp",
    "pattern": {
      "format": "yyyy-MM-dd'T'HH:mm:ss.SSSZ"
    }
  },
  "level": {
    "$resolver": "level",
    "field": "name"
  },
  "logger": {
    "$resolver": "logger",
    "field": "name"
  },
  "message": {
    "$resolver": "message",
    "stringified": true
  },
  "thread": {
    "$resolver": "thread",
    "field": "name"
  },
  "exception": {
    "$resolver": "exception",
    "field": "stackTrace",
    "stackTrace": {
      "stringified": true
    }
  },
  "dd": {
    "trace_id": {
      "$resolver": "mdc",
      "key": "dd.trace_id"
    },
    "span_id": {
      "$resolver": "mdc",
      "key": "dd.span_id"
    },
    "service": "${env:DD_SERVICE:-transaction-service}",
    "version": "${env:DD_VERSION:-1.0.0}",
    "env": "${env:DD_ENV:-development}"
  },
  "pix": {
    "chave_pix": {
      "$resolver": "mdc",
      "key": "chave_pix"
    },
    "valor": {
      "$resolver": "mdc",
      "key": "valor"
    },
    "valor_numerico": {
      "$resolver": "mdc",
      "key": "valor_numerico"
    },
    "tipo_chave": {
      "$resolver": "mdc",
      "key": "tipo_chave"
    },
    "status": {
      "$resolver": "mdc",
      "key": "status_transacao"
    },
    "transaction_id": {
      "$resolver": "mdc",
      "key": "transaction_id"
    },
    "duracao_ms": {
      "$resolver": "mdc",
      "key": "duracao_ms"
    }
  },
  "remetente": {
    "id": {
      "$resolver": "mdc",
      "key": "remetente_id"
    },
    "conta_id": {
      "$resolver": "mdc",
      "key": "conta_origem_id"
    },
    "banco": {
      "$resolver": "mdc",
      "key": "remetente_banco"
    },
    "saldo_antes": {
      "$resolver": "mdc",
      "key": "saldo_antes"
    },
    "saldo_depois": {
      "$resolver": "mdc",
      "key": "saldo_depois"
    }
  },
  "destinatario": {
    "id": {
      "$resolver": "mdc",
      "key": "destinatario_id"
    },
    "nome": {
      "$resolver": "mdc",
      "key": "destinatario_nome"
    },
    "cpf_masked": {
      "$resolver": "mdc",
      "key": "destinatario_cpf"
    },
    "banco": {
      "$resolver": "mdc",
      "key": "destinatario_banco"
    }
  },
  "erro": {
    "codigo": {
      "$resolver": "mdc",
      "key": "erro_codigo"
    },
    "mensagem": {
      "$resolver": "mdc",
      "key": "erro_mensagem"
    },
    "tipo": {
      "$resolver": "mdc",
      "key": "erro_tipo"
    }
  },
  "metricas": {
    "sucesso": {
      "$resolver": "mdc",
      "key": "pix_sucesso"
    },
    "falha": {
      "$resolver": "mdc",
      "key": "pix_falha"
    },
    "tempo_banco_central_ms": {
      "$resolver": "mdc",
      "key": "tempo_banco_central_ms"
    }
  }
}
